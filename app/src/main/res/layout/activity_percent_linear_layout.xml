<demo.gyw.com.myapplication.weiget.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="demo.gyw.com.myapplication.ui.percent.PercentLinearLayoutActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ff0000"
        android:gravity="center"
        android:text="height:5% width:60%"
        app:layout_heightPercent="5%"
        app:layout_marginBottomPercent="5%"
        app:layout_widthPercent="60%" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffff00"
        android:gravity="center"
        android:text="height:10% width:65%"
        app:layout_heightPercent="10%"
        app:layout_marginBottomPercent="5%"
        app:layout_widthPercent="65%" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00ff00"
        android:gravity="center"
        android:text="height:15% width:70%"
        app:layout_heightPercent="15%"
        app:layout_marginBottomPercent="5%"
        app:layout_widthPercent="75%" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00ffff"
        android:gravity="center"
        android:text="height:20% width:80%"
        app:layout_heightPercent="20%"
        app:layout_marginBottomPercent="5%"
        app:layout_widthPercent="80%" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ff00ff"
        android:gravity="center"
        android:text="height:25% width:85%"
        app:layout_heightPercent="25%"
        app:layout_marginBottomPercent="5%"
        app:layout_widthPercent="85%" />


</demo.gyw.com.myapplication.weiget.PercentLinearLayout>
